page {
  padding-top: 180rpx;
  background-color: #fafafa;
}
.price {
  padding: 30rpx;
  padding-top: 60rpx;
  font-size: 48rpx;
  border-bottom: 1px solid #dedede;
}
.price > text {
  font-size: 32rpx;
  color: #DD524D;
  margin-left: 60rpx;
}
.button {
  width: 100vw;
  position: fixed;
  bottom: 0rpx;
  background: #FFFFFF;
  padding: 3vw;
  z-index: 10;
}
.button > view {
  width: 94vw;
  background-color: #007AFF;
  color: #FFFFFF;
  line-height: 90rpx;
  text-align: center;
  border-radius: 16rpx;
}
.content {
  padding: 30rpx;
  padding-bottom: 180rpx;
}
.content .title {
  margin-bottom: 30rpx;
}
.content .list {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 36rpx;
  color: #999999;
  margin: 20rpx 0rpx;
}
.headline {
  z-index: 10;
  background-color: #007AFF;
  color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 20rpx 0rpx;
  position: fixed;
  width: 100%;
  top: 0rpx;
  padding-top: 90rpx;
}
.headline > view {
  padding: 0rpx 20rpx;
}

