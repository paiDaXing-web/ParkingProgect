.top {
  border: 2rpx solid #F1F1F1;
  position: fixed;
  top: 0px;
  width: 100vw;
}
.search {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 16rpx;
  border-bottom: 1px solid #F1F1F1;
}
.search > input {
  width: 650rpx;
  margin-left: 10rpx;
}
.search > image {
  height: 28rpx;
  width: 28rpx;
}
.site {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  padding: 16rpx 0rpx;
  border-bottom: 1px solid #F1F1F1;
}
.site > image {
  width: 39rpx;
  height: 39rpx;
  margin: 0rpx 16rpx;
}
.site .right {
  font-size: 28rpx;
  color: #999999;
}
.site .right > .name {
  font-size: 32rpx;
  color: #000000;
}

