.top {
  border: 2rpx solid #F1F1F1;
  position: fixed;
  top: 0px;
  width: 100vw;
}
page {
  background-color: #F1F1F1;
  margin-bottom: 180rpx;
}
.hint {
  padding-top: 20rpx;
  font-size: 24rpx;
  color: #999999;
}
.button {
  position: fixed;
  bottom: 0rpx;
  background-color: #007AFF;
  color: #FFFFFF;
  font-size: 32rpx;
  width: 100%;
  text-align: center;
  padding: 20rpx 0rpx;
}
.content {
  background-color: #FFFFFF;
  width: 94vw;
  margin: 3vw;
  border-radius: 16rpx;
}
.content > image {
  border-top-left-radius: 16rpx;
  border-top-right-radius: 16rpx;
  width: 94vw;
}
.content .text {
  padding: 3vw;
}
.content .text .site {
  border-bottom: 1px solid #F1F1F1;
  padding: 20rpx 0rpx;
  font-size: 28rpx;
  color: #999999;
}
.content .text .site > .name {
  font-size: 32rpx;
  color: #000000;
}
.content .text .site > .name > text {
  color: #FFFFFF;
  background-color: #007AFF;
  font-size: 20rpx;
  padding: 4rpx 20rpx;
  border-radius: 20rpx;
  margin-left: 16rpx;
}
.content .text .status {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  font-size: 28rpx;
}
.content .text .status .right {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
}
.content .text .status .right > image {
  width: 30rpx;
  height: 30rpx;
}
.content .text .list {
  border-bottom: 1px solid #F1F1F1;
}
.content .text .list .li {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 16rpx 0rpx;
  font-size: 28rpx;
}
.content .text .list .li text {
  color: #007AFF;
}

