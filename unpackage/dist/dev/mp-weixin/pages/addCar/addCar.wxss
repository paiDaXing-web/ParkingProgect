page {
  padding-top: 90rpx;
  background-color: #fafafa;
}
.headline {
  background-color: #007AFF;
  color: #FFFFFF;
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  padding: 20rpx 0rpx;
  position: fixed;
  width: 100%;
  top: 90rpx;
}
.headline > view {
  padding: 0rpx 20rpx;
}
.content {
  margin-top: 10rpx;
  padding: 0rpx 40rpx;
  text-align: center;
}
.content > image {
  width: 120rpx;
  height: 120rpx;
}
.content .input {
  display: -webkit-box;
  display: -webkit-flex;
  display: flex;
  -webkit-box-orient: horizontal;
  -webkit-box-direction: normal;
  -webkit-flex-direction: row;
          flex-direction: row;
  -webkit-box-pack: justify;
  -webkit-justify-content: space-between;
          justify-content: space-between;
  -webkit-box-align: center;
  -webkit-align-items: center;
          align-items: center;
  font-size: 32rpx;
  margin: 120rpx 0rpx;
}
.content .input > view {
  color: #C0C0C0;
  border-bottom: 1px solid #C0C0C0;
  width: 420rpx;
  padding: 20rpx;
  text-align: left;
}
.content .input .iconfont {
  color: #808080;
}
.content .button {
  background-color: #007AFF;
  color: #FFFFFF;
  font-size: 32rpx;
  padding: 20rpx 0rpx;
  border-radius: 60rpx;
}

